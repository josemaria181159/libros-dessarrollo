<!doctype html>
<html lang="{{ book.language }}">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="author" content="{{ book.author }}" />
        <meta name="date" content="{{ book.publication_date|default('now')|date(app.getLabel('date_format')) }}"/>
        <meta name="generator" content="{{ book.generator.name }} {{ book.generator.version }}"/>

        <title>{% block title %}{% endblock %} {{ '' != block('title') ? '|' : '' }} {{ book.title }}</title>

        {% if edition.include_styles %}
        <link rel="stylesheet" href="{{ 2 == item.level ? '..' : '.' }}/css/easybook.css" />
        {% endif %}

        {% if has_custom_css|default(false) %}
        <link rel="stylesheet" href="{{ 2 == item.level ? '..' : '.' }}/css/styles.css" />
        {% endif %}
    </head>

    <body class="{% block class %}item {{ item.config.element }}{% endblock %}">
        <div class="container">
        {% block body %}{% endblock %}
        </div>
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-39705204-1', 'arkaitzgarro.com');
          ga('send', 'pageview');

        </script>
    </body>
</html>